<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Program).Assembly" >
        <Found Context="routeData">                       
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(CMS.Website.Areas.Shared.MemberLayout)">
                           
            </AuthorizeRouteView>
        </Found>
        <NotFound>           
                <LayoutView Layout="@typeof(CMS.Website.Areas.Shared.MemberLayout)">
                  <CMS.Website.Areas.Shared.Error404 />
                </LayoutView>        
        </NotFound>        
    </Router>    
</CascadingAuthenticationState>
