@page "/Admin/Logvisit/Index"

<!-- row -->
<div class="row">
    <!-- Left sidebar -->
    <div class="col-md-12">
        <div class="white-box">
            <h3 class="box-title m-b-0">Lịch sử truy cập</h3>
            <p class="text-muted m-b-30 font-13">Lịch sử truy cập của khách ghé thăm Website</p>
            <!-- row -->
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="inbox-center">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <tbody>
                                    @if(lstLogVisit == null)
                                    {
                                        
                                    }
                                    else
                                    {
                                        @foreach(var item in lstLogVisit)
                                        {
                                                
                                                        string styleStatus = "label-primary";
                                                        
                                                        if (item.ObjectType == "ProductCategory")
                                                        {
                                                            styleStatus = "label-danger";

                                                        }
                                                        else if (item.ObjectType == "Product")
                                                        {
                                                            styleStatus = "label-info";
                                                        }
                                                        else if (item.ObjectType == "Article")
                                                        {
                                                            styleStatus = "label-primary";
                                                        }
                                                        else if (item.ObjectType == "ArticleCategory")
                                                        {
                                                            styleStatus = "label-warning";
                                                        }
                                                        else if (item.ObjectType == "ProductBrand")
                                                        {
                                                            styleStatus = "label-success";
                                                        }
                                                    
                                            <tr>
                                                <td class="">@item.CreateDate?.ToString("dd/MM/yyyy | hh:mm")</td>
                                                <td class="max-texts">
                                                    <a href="javascript:void(0)">
                                                        <b>@((String.IsNullOrEmpty(item.UserName)) ? "Khách" : item.UserName) </b> 
                                                        vừa xem @item.ObjectTypeName 
                                                        <b>@item.ObjectName</b> 

                                                        @if(item.ProductBrandId != null)
                                                        {
                                                            <span> của cửa hàng </span>
                                                            <b>@item.ProductBrandName</b>     
                                                        }
                                                        
                                                        <span class="label @styleStatus" style="margin-left:10px;">@item.ObjectTypeName</span>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                  
                                    
                                </tbody>
                            </table>
                        </div>
                             <div class="row">
                            <div class="col-xs-12 col-sm-12">
                                <div class="dataTables_paginate paging_simple_numbers" id="simpletable_paginate" style="float:right">
                                    <ul class="pagination">
                                        <li class="paginate_button page-item previous" id="simpletable_previous">
                                            <a href="Admin/Logvisit/Index?p=@p" aria-controls="simpletable" data-dt-idx="1" tabindex="0" class="page-link">
                                                <i class="fa fa-fast-backward"></i>
                                            </a>
                                        </li>
                                        <li class="paginate_button page-item previous" id="simpletable_previous">
                                            <a href="Admin/Logvisit/Index?p=@(p > 1 ? p - 1 : 1)" aria-controls="simpletable" data-dt-idx="@(p-1)" tabindex="0" class="page-link">
                                                <i class="fa fa-step-backward"></i>
                                            </a>
                                        </li>
                                        @for (var i = 1; i <= totalPages; i++)
                                        {
                                            <li class="paginate_button page-item @(i == p ? "active" : "")" style="@((i > p + 2) || (i < p -2) ? "display:none" : "" )">
                                                <a href="Admin/Logvisit/Index?p=@i" aria-controls="simpletable" data-dt-idx="@i" tabindex="0" class="page-link">
                                                    @i
                                                </a>
                                            </li>
                                        }
                                        <li class="paginate_button page-item next" id="simpletable_next">
                                            <a href="Admin/Logvisit/Index?p=@(p == totalPages ? totalPages : p + 1)" aria-controls="simpletable" data-dt-idx="@(p+1)" tabindex="0" class="page-link">
                                                <i class="fa fa-step-forward"></i>
                                            </a>
                                        </li>
                                        <li class="paginate_button page-item next" id="simpletable_next">
                                            <a href="Admin/Logvisit/Index?p=@totalPages" aria-controls="simpletable" data-dt-idx="@totalPages" tabindex="0" class="page-link">
                                                <i class="fa fa-fast-forward"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.row -->
        </div>
    </div>
</div>
<!-- /.row -->
