<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Program).Assembly" PreferExactMatches="@true">
        <Found Context="routeData">                       
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(CMS.Website.Areas.Shared.AdminLayout)"> 
                            
            </AuthorizeRouteView>
        </Found>
        <NotFound>           
                <LayoutView Layout="@typeof(CMS.Website.Areas.Shared.AdminLayout)">
                  <CMS.Website.Areas.Shared.Error404 />
                </LayoutView>        
        </NotFound>        
    </Router>    
</CascadingAuthenticationState>

