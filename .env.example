# Docker Compose Environment Variables
# Copy this file to .env and update the values

# ===========================================
# PostgreSQL Configuration
# ===========================================
POSTGRES_DB=cms_db
POSTGRES_USER=cms_user
POSTGRES_PASSWORD=change_this_password
POSTGRES_PORT=5432

# ===========================================
# Redis Configuration
# ===========================================
REDIS_PASSWORD=change_this_redis_password
REDIS_PORT=6379
REDIS_CONNECTION=redis:6379,password=change_this_redis_password

# ===========================================
# API Configuration
# ===========================================
API_PORT=5000
ASPNETCORE_ENVIRONMENT=Development

# ===========================================
# JWT Configuration
# ===========================================
# IMPORTANT: Change this to a secure random string (at least 32 characters)
JWT_SECRET_KEY=your-super-secret-key-with-at-least-32-characters-for-security
JWT_ISSUER=CMS.API
JWT_AUDIENCE=CMS.Frontend
JWT_EXPIRATION_MINUTES=60
JWT_REFRESH_EXPIRATION_DAYS=7

# ===========================================
# Frontend Configuration (if using Docker for frontend)
# ===========================================
FRONTEND_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:5000
